# Anteas Lucca - Uploads protection
# Allow only image access, deny everything else

# Deny access to .htaccess itself
<Files .htaccess>
    Order allow,deny
    Deny from all
</Files>

# Allow access to images only
<FilesMatch "\.(jpg|jpeg|png|gif|webp)$">
    Order allow,deny
    Allow from all
</FilesMatch>

# Deny access to other file types
<FilesMatch "\.(php|php3|php4|php5|phtml|pl|py|jsp|asp|sh|cgi)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Disable PHP execution (if in uploads dir)
<IfModule mod_php.c>
    php_flag engine off
</IfModule>

# Security headers for uploaded files
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
</IfModule>
